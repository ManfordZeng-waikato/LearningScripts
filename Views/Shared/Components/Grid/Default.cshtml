@model BookGridModel

<div class="box">
    <h3>@Model.GridTitle</h3>
    <table class="table w-100">
        <thead>
            <tr>
                <th>Sl.No</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book book in Model.Books)
            {
                <tr>
                    <td>@book.Author</td>
                    <td>@book.AuthorGender</td>
                </tr>
            }
        </tbody>
    </table>
</div>